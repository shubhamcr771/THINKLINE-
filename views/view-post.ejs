<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>view-post</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <%- include("header") %>
    <div class="lh-lg mt-5 container">
        <h1 class="text-center text-primary-emphasis fw-medium mb-3"><%= title %></h1>
        <p id="editableContent" contenteditable="true" class="fw-medium form-control" oninput="updateContent()"><%= content %></p>
        <a href="/edit-post/<%= title %>/<%= content %>" class="btn btn-primary">Edit</a>

        <form action="/delete-post" method="POST" style="display: inline;">
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>
    </div>

    <%- include("footer") %>

    <script>
        function updateContent() {
            const editableContent = document.getElementById('editableContent');
            const content = editableContent.innerText;
            editableContent.innerHTML = content.replace(/\n/g, '<br>');
        }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
